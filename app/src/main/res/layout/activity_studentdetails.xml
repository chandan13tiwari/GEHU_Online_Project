<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:id="@+id/layoutid"
    android:background="@color/white">


        <ImageView
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />


    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/editTextSearch"
        android:layout_below="@+id/regstu"
        android:inputType="textPersonName"
        android:text="Student Search"
        android:layout_marginTop="20dp"
        android:textColor="#555555"
        android:textSize="24dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/heading"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_background"
        android:hint="Search here..."
        android:padding="15dp"
        android:textColor="#6e6866" />

    <ImageView
        android:id="@+id/btn_search"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_alignTop="@+id/editTextSearch"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/editTextSearch"
        android:src="@drawable/search2" />

    <TextView
        android:id="@+id/regstu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registered Students"
        android:textSize="35dp"
        android:textColor="#555555"
        android:fontFamily="@font/dancingscriptbold"
        android:layout_below="@+id/logo"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

        

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextSearch"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

    </ListView>









</RelativeLayout>
</LinearLayout>
