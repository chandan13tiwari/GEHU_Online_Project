<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".PaytmPaymentSample"
    android:background="@color/white">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first">



    <ImageView
        android:id="@+id/img_head"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/logo3"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/img_head"
        android:background="@drawable/cse"
        android:padding="4dp" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/img_head"
        android:layout_toRightOf="@id/imageView"
        android:text="Bachelor of Technology"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewShortDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginLeft="5dp"
        android:textColor="#555555"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imageView"
        android:text="Computer Science and Engineering"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


    <TextView
        android:id="@+id/textViewsymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewShortDesc"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imageView"
        android:text="Rs."
        android:textColor="#000000"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewShortDesc"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/textViewsymbol"
        android:text="20.00"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold" />


    <Button
        android:id="@+id/buttonBuy"
        android:layout_toRightOf="@id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPrice"
        android:text="Submit Fee" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/second"
        android:layout_below="@+id/first"
        android:layout_marginTop="20dp">





        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:background="@drawable/bcom"
            android:padding="4dp" />

        <TextView
            android:id="@+id/textViewTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:layout_toRightOf="@id/imageView2"
            android:text="Bachelor of Commerce"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewShortDesc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle2"
            android:layout_marginLeft="5dp"
            android:textColor="#555555"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageView2"
            android:text="Mathematics(Hons.)"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


        <TextView
            android:id="@+id/textViewsymbol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewShortDesc2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageView2"
            android:text="Rs."
            android:textColor="#000000"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textViewPrice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewShortDesc2"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/textViewsymbol2"
            android:text="10.00"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold" />


        <Button
            android:id="@+id/buttonBuy2"
            android:layout_toRightOf="@id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPrice2"
            android:text="Submit Fee" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/third"
        android:layout_below="@+id/second"
        android:layout_marginTop="20dp">





        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:background="@drawable/bca"
            android:padding="4dp" />

        <TextView
            android:id="@+id/textViewTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:layout_toRightOf="@id/imageView3"
            android:text="Bachelor of Computer Applications"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewShortDesc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle3"
            android:layout_marginLeft="5dp"
            android:textColor="#555555"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageView3"
            android:text="Bachelor of Computer Applications"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


        <TextView
            android:id="@+id/textViewsymbol3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewShortDesc3"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageView3"
            android:text="Rs."
            android:textColor="#000000"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textViewPrice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewShortDesc3"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/textViewsymbol3"
            android:text="10.00"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold" />


        <Button
            android:id="@+id/buttonBuy3"
            android:layout_toRightOf="@id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPrice3"
            android:text="Submit Fee" />

    </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fourth"
            android:layout_below="@+id/third"
            android:layout_marginTop="20dp">





            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:background="@drawable/bsc"
                android:padding="4dp" />

            <TextView
                android:id="@+id/textViewTitle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:layout_toRightOf="@id/imageView4"
                android:text="Bachelor of Science"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewShortDesc4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle4"
                android:layout_marginLeft="5dp"
                android:textColor="#555555"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageView4"
                android:text="MicroBiology"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


            <TextView
                android:id="@+id/textViewsymbol4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewShortDesc4"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageView4"
                android:text="Rs."
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewPrice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewShortDesc4"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/textViewsymbol4"
                android:text="15.00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />


            <Button
                android:id="@+id/buttonBuy4"
                android:layout_toRightOf="@id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPrice4"
                android:text="Submit Fee" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>

</RelativeLayout>
